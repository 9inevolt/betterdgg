{
    "name": "Better Destiny.gg",
    "version": "development",
    "manifest_version": 2,

    "description": "Restores emotes and faith in humanity to users of destiny.gg",
    "icons": {
        "48":  "icon.png",
        "128": "icon128.png"
    },

    "permissions": [
        "*://*.destiny.gg/*",
        "*://*.ustream.tv/*",
        "*://*.overrustle.com/*",
        "*://*.downthecrop.xyz/*",
        "*://*.overrustlelogs.net/*"
    ],

    "background": {
        "scripts": [ "lib/jsbn.js", "lib/xhr.js", "lib/wampy.js", "lib/service.js" ]
    },

    "content_scripts": [
        {
            "matches": ["*://*.destiny.gg/*"],
            "css": ["betterdgg.css"],
            "js": ["betterdgg.js"],
            "all_frames":true
        }
    ],

    "web_accessible_resources": [
        "images/*",
        "injected.js"
    ]
}
